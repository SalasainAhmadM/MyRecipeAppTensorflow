<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:id="@+id/drawerLayout"
    tools:context=".OtherRecipes.SeafoodResult45E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_result" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inputted Ingredients"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/evogria"
            android:textColor="@color/burgundy"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Squid"
            android:textSize="18dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/burgundy"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onion"
            android:textSize="18dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/burgundy"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salt"
            android:textSize="18dp"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/burgundy"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESULTS"
            android:textSize="20dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/evogria"
            android:textColor="@color/burgundy"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:layout_marginTop="280dp"
                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    app:cardBackgroundColor="@color/white"
                    android:id="@+id/inputRecipe1"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chickenName"
                            android:text="Ginising Pusit"
                            android:fontFamily="@font/roboto"
                            android:textSize="25sp"
                            android:layout_marginStart="110dp"
                            android:textColor="@color/burgundy"
                            android:layout_marginTop="30dp"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="10dp"
                            android:id="@+id/chickenImage"
                            android:src="@drawable/ginisangpusit"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/row1"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp"
                android:padding="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    app:cardBackgroundColor="@color/white"
                    android:id="@+id/inputRecipe2"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sisig Pusit"
                            android:fontFamily="@font/roboto"
                            android:textSize="25sp"
                            android:layout_marginStart="110dp"
                            android:textColor="@color/burgundy"
                            android:layout_marginTop="30dp"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:padding="10dp"
                            android:src="@drawable/sisigpusit"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include
            layout="@layout/nav_drawer"/>

    </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>